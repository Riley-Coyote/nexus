# NEXUS App Environment Configuration
# Fill in your actual Supabase credentials below

# =================
# SUPABASE CONFIG (REQUIRED)
# =================
# Get these from your Supabase project Settings > API
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# =================
# APP CONFIG
# =================
NEXT_PUBLIC_DATABASE_PROVIDER=supabase
NEXT_PUBLIC_USE_MOCK_DATA=false
NEXT_PUBLIC_THREADING_MODE=adaptive
NEXT_PUBLIC_MAX_THREAD_DEPTH=100
NEXT_PUBLIC_MAX_THREAD_ENTRIES=10000

# =================
# DEVELOPMENT
# =================
NODE_ENV=development
